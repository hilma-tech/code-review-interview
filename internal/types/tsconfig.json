{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
